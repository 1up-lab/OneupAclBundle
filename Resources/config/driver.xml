<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="oneup_acl.driver_chain" class="Oneup\AclBundle\Driver\DriverChain" public="true"/>

        <service id="oneup_acl_annotation_driver" class="Oneup\AclBundle\Driver\Annotation\AnnotationDriver">
            <argument type="service" id="annotation_reader" />
            <tag name="oneup_acl.driver" />
        </service>
    </services>
</container>
